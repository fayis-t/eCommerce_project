<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f4f4f4;">
    <div style="width: 100%; max-width: 1000px; background: #fff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); overflow: hidden; display: flex; flex-direction: row;">
        <!-- Left Image Section -->
        <div class="d-none d-md-block" style="width: 50%; background-image: url('images/register_img.jpg'); background-size: cover; background-position: center;"></div>

        <!-- Right Register Form Section -->
        <div style="padding: 40px; width: 50%;">
            <h2 style="font-weight: bold; color: #333; border-bottom: 2px solid #333; display: inline-block; padding-bottom: 5px; margin-bottom: 30px;">REGISTRATION FORM</h2>
            
            <!-- Error/Success Message -->
            <div id="message" style="display: none; margin-bottom: 15px; font-size: 0.9rem;"></div>
            
            <!-- Registration Form -->
            <form id="registerForm" novalidate>
                <div class="mb-3">
                    <input type="text" name="Username" class="form-control" placeholder="Username" required style="border-radius: 20px; padding-left: 20px; margin-bottom: 20px;">
                </div>
                <div class="mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Email address" required style="border-radius: 20px; padding-left: 20px; margin-bottom: 20px;">
                </div>
                <div class="mb-3">
                    <input type="password" name="password" class="form-control" placeholder="Password" required style="border-radius: 20px; padding-left: 20px; margin-bottom: 20px;">
                </div>
                <div class="mb-3">
                    <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password" required style="border-radius: 20px; padding-left: 20px; margin-bottom: 20px;">
                </div>
                <button type="submit" class="btn" style="width: 100%; border-radius: 20px; background-color: #333; color: #fff; font-weight: bold; padding: 10px; margin-top: 10px;">Register</button>
            </form>

            <div style="font-size: 0.9rem; color: #888; text-align: center; margin-top: 15px;">
                <p style="margin-top: 15px;" >Already have an account? <a href="/login" style="color: #e84393; text-decoration: none;">Sign In here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        // JavaScript to handle form submission without page reload
document.getElementById('registerForm').addEventListener('submit', async function(event) {
    event.preventDefault(); // Prevent the form from submitting normally

    const messageDiv = document.getElementById('message');
    messageDiv.style.display = 'none'; // Hide message by default

    // Collect form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());

    try {
        // Send the form data using fetch
        const response = await fetch('/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        // Parse the JSON response
        const result = await response.json();

        // Display message
        messageDiv.style.display = 'block';
        if (response.ok) {
            window.location.href = '/otp';
        } else {
            messageDiv.textContent = result.error || 'Registration failed. Please try again.';
            messageDiv.style.color = 'red';
        }
    } catch (error) {
        console.error('Error:', error);
        messageDiv.textContent = 'An error occurred. Please try again.';
        messageDiv.style.display = 'block';
        messageDiv.style.color = 'red';
    }
});

    </script>
</body>
</html>
